{
  "productName": "MuxTunnel",
  "version": "0.1.0",
  "identifier": "com.muxtunnel.app",
  "build": {
    "frontendDist": "../dist/client",
    "devUrl": "http://localhost:5181",
    "beforeDevCommand": "npm run dev:vite",
    "beforeBuildCommand": "npm run build:client"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "MuxTunnel",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost blob: data:; style-src 'unsafe-inline' 'self'; script-src 'self'",
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["$HOME/.muxtunnel/**", "$HOME/**"]
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns"
    ]
  }
}
